<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PrimerParcial.Ejercicio11"
    Title="Ejercicio 1.1">
    <ContentPage.Content>
        <StackLayout Padding="12, 20">
            <Label Text="Número 1" />
            <Entry x:Name="TxtNumero1" Text="{Binding Numero1}" Keyboard="Numeric" Placeholder="Ingrese el número 1" />
            <Label Text="Número 2" />
            <Entry x:Name="TxtNumero2" Text="{Binding Numero2}" Keyboard="Numeric" Placeholder="Ingrese el número 2" />
            <Button
                x:Name="BtSumar"  Text="Suma" Clicked="BtSumar_Clicked"
                Margin="0, 12, 0, 0" BackgroundColor="AliceBlue" />
            <Button
                x:Name="BtRestar"  Text="Resta" Clicked="BtRestar_Clicked"
                BackgroundColor="AliceBlue" />
            <Button
                x:Name="BtDividir"  Text="División" Clicked="BtDividir_Clicked"
                BackgroundColor="AliceBlue" />
            <Button
                x:Name="BtMultiplicar"  Text="Multiplicación" Clicked="BtMultiplicar_Clicked"
                BackgroundColor="AliceBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

